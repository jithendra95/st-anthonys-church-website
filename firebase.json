{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextServer"
      }
    ],
    "cleanUrls": true
  },
  "functions": {
    "runtime": "nodejs14",
    "source": ".",
    "ignore": [
      "**/src/**",
      "**/.vscode/**",
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**",
      "**/.next/cache/**"
    ]
  }
}
